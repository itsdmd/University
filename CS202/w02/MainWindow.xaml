<Window x:Class="w02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w02"
        mc:Ignorable="d"
        Title="Bundesliga Clubs" Height="450" Width="800">
    
    <Canvas>
        <Image x:Name="image"
               Width="250" Height="250"
               Canvas.Left="500" Canvas.Top="50"/>

        <Label x:Name="textbox"
			   FontSize="32"
			   FontWeight="Bold"
               Canvas.Left="50" Canvas.Top="50" />

        <Button x:Name="button"
                Width="75" Height="30"
                Content="Change" 
                Canvas.Left="50" Canvas.Top="200" 
                Click="changeButton_Click" />
    </Canvas>
</Window>
