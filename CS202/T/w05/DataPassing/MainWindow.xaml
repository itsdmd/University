<Window x:Class="DataPassing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataPassing"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="220" Loaded="Window_Loaded">
	<Canvas>
		<Label Content="Source" 
			   FontSize="30" FontWeight="DemiBold"
			   Canvas.Left="10" Canvas.Top="5"/>
		<TextBox x:Name="txtSource" Text="{Binding Name}"
				 Width="200" Height="50"
				 Canvas.Left="10" Canvas.Top="50"/>
		<Button x:Name="okButton" IsDefault="True"
				Content="OK" Click="okButton_Click"
				Width="80" Height="20"
				Canvas.Left="70" Canvas.Top="118"/>
	</Canvas>
</Window>
