										   Width="30" Height="30"
										   Canvas.Right="0" Canvas.Top="0"
										   Background="Wheat" Foreground="Black"
										   Text="-15%" TextAlignment="Center"/>
							</Canvas>
							<TextBlock x:Name="fsp1"
									   Text="250.000"
					   				   TextAlignment="Center" TextWrapping="Wrap"
					   				   VerticalAlignment="Center" HorizontalAlignment="Center"
									   Foreground="Orange"
									   FontSize="15"/>
