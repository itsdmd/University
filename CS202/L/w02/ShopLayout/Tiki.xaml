					   		   TextAlignment="Center" TextWrapping="Wrap"
					   		   VerticalAlignment="Center" HorizontalAlignment="Center"/>
					</StackPanel>
				</Border>
			</UniformGrid>
		</Border>

		<Border BorderThickness="5" BorderBrush="Silver">
			<StackPanel Orientation="Vertical">
				<DockPanel>
					<Image Source="res/crown.png"
						   Width="20" Height="20"
						   DockPanel.Dock="Left"
						   Margin="5"/>
					<TextBlock Text="Xu Huong Mua Sam"
							   TextAlignment="Left" VerticalAlignment="Center" Margin="5"
							   DockPanel.Dock="Left"
							   Foreground="Blue"
							   FontSize="20" FontWeight="Bold"/>
					<TextBlock Text="XEM THEM"
							   TextAlignment="Right" VerticalAlignment="Center" Margin="5"
							   DockPanel.Dock="Right"
							   Foreground="Blue"/>
				</DockPanel>

				<UniformGrid Rows="1">
					<Border BorderThickness="0.5" BorderBrush="Black" Margin="10">
						<StackPanel Orientation="Vertical">
							<StackPanel Orientation="Vertical">
								<TextBlock Text="Noi ap suat"
										   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"
										   FontSize="15" FontWeight="Bold"/>
								<TextBlock Text="Nhieu nguoi xem"
										   TextAlignment="Center"
										   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"
										   Width="100"
										   Foreground="DeepSkyBlue" Background="LightCyan"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<Border BorderBrush="Black" BorderThickness="1" Margin="5">
									<Image x:Name="fsi11"
										   Width="100" Height="100" Margin="5"
										   Source="res/pressure-cooker-2.png"/>
