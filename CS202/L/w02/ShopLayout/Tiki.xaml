			</UniformGrid>
		</Border>

		<Border BorderThickness="5" BorderBrush="Silver">
			<StackPanel Orientation="Vertical">
				<UniformGrid Rows="1" Columns="2">
					<TextBlock Text="Xu Huong Mua Sam"
							   TextAlignment="Left" VerticalAlignment="Center"
							   Foreground="Orange"
							   FontSize="20" FontWeight="Bold"/>
					<TextBlock Text="Xem tat ca &gt;"
							   TextAlignment="Right" VerticalAlignment="Center"
							   Foreground="Orange"/>
				</UniformGrid>

				<UniformGrid Rows="1">
					<Border BorderThickness="0.5" BorderBrush="Black">
						<StackPanel Orientation="Vertical">
							<Canvas Width="100" Height="100">
								<Image x:Name="fsi1"
									   Width="100" Height="100"
									   Source="res/detergent-1.png"/>
								<TextBlock x:Name="fsd1"
										   Width="30" Height="30"
										   Canvas.Right="0" Canvas.Top="0"
										   Background="Wheat" Foreground="Black"
										   Text="-15%" TextAlignment="Center"/>
							</Canvas>
							<TextBlock x:Name="fsp1"
									   Text="250.000"
					   				   TextAlignment="Center" TextWrapping="Wrap"
					   				   VerticalAlignment="Center" HorizontalAlignment="Center"
									   Foreground="Orange"
									   FontSize="15"/>
						</StackPanel>
					</Border>
					<Border BorderThickness="0.5" BorderBrush="Black">
						<StackPanel Orientation="Vertical">
							<Canvas Width="100" Height="100">
								<Image x:Name="fsi2"
