<Window x:Class="FinalProject.EditRuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProject"
        mc:Ignorable="d"
        Title="EditRuleWindow" Height="200" Width="400" Loaded="Window_Loaded">
	<Canvas>

		<TextBlock x:Name="ruleNameTextBlock"
				   FontSize="25" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Width="330"/>

		<TextBox x:Name="ruleConfigTextBox" TextChanged="ruleConfigTextBox_TextChanged"
				 FontSize="20" Width="330" HorizontalAlignment="Center" Canvas.Top="48" VerticalAlignment="Top" Canvas.Left="10" Height="32"/>

		<Button x:Name="okButton" Content="OK"  IsDefault="True" Click="okButton_Click"
				Width="50" Canvas.Left="235" Canvas.Top="104" HorizontalAlignment="Left" VerticalAlignment="Center"/>

		<Button x:Name="cancelButton" Content="Cancel" IsCancel="True"
				Width="50" Canvas.Left="290" Canvas.Top="104" HorizontalAlignment="Left" VerticalAlignment="Center"/>

	</Canvas>
</Window>
